<%- include ('./partials/header') %>




<% blog.forEach(function(blog){ %>
<div class="container  mt-2 mb-5 jumbotron ">
    <h2 class="mt-3 text-center"><%= blog.title %></h2>
    <img class="rounded mx-auto d-block show-page-img mt-3 mb-2" src="<%= blog.image %>" />
    <div class="">

        <p class="font-weight-light"><%= blog.created.toDateString() %></p>
        <p class="font-weight-bold"> <%- blog.body %></p>
        <a class="mt-2 btn btn-primary" href="/blogs/<%= blog._id %>/edit"> Edit This Blog </a>
        <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" class="list-inline-item"
            onsubmit="return confirm('Do you really want to submit the form?');">
            <button class="mt-2 btn btn-danger"> Delete this blog</button>
        </form>
        <a class="mt-2 btn btn-secondary list-inliune-item" href="/blogs"> Back </a>

    </div>
</div>
<% })%>


<%- include ('./partials/footer') %>