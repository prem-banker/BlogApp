<%- include ('./partials/header') %>

<div class="container  mt-2 mb-5 jumbotron ">


    <h1> Edit the blog <%=blog.title %> !!</h1>

    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="form-group row">
            <div class="col-6">
                <label for="blog-title">Blog Title</label>
                <input type="text" class="form-control" id="blog-title" name="title" value="<%=blog.title %>"
                    placeholder="title">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label for="blog-image">Blog Image URL</label>
                <input type="text" class="form-control" id="blog-image" placeholder="image" name="image"
                    value="<%=blog.image %>">
            </div>
        </div>
        <div class="form-group">
            <label for="blog-body">Example textarea</label>
            <textarea class="form-control" id="blog-body" rows="10" name="body"> <%=blog.body %></textarea>
        </div>
        <input type="submit" class="btn btn-success" value="Save changes "
            onclick="return confirm('Confirm changes ?');">
    </form>
    <a class="mt-2 btn btn-secondary list-inline-item" href="/blogs/<%=blog._id%>"> Back </a>

</div>


<%- include ('./partials/footer') %>